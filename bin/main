#!/usr/bin/env ruby
puts 'Hello World!'
players = {}


puts "Player 1 please let me know your name"
player1 = gets.chomp

puts "Player 2 please let me know your name"
player2 = gets.chomp


puts  "#{player1} type a symbol to play with (X, 0)"
 players[player1] = gets.chomp.downcase


players[player1] == 'x' ? players[player2] = "0" : players[player2] = 'x'
    
puts "#{player2} You have been assigned with O symbol"
p "Your wepon #{players}"

puts "Here is the play board /n Rows are 1, 2 , 3 And Colums are a, b, c"
puts "  _a___b__c_"
puts "1 |  |  |  |"
puts "  |__|__|__|"
puts "2 |  |  |  |"
puts "  |__|__|__|"
puts "3 |  |  |  |"
puts "  |__|__|__|"


puts "Its #{player1} turn now!\n#{player1}, You've to put #{players[player1]} at the box address!"
turn1 = get.chom.to_i 

puts "Its #{player2} turn now!\n#{player2}, You've to put #{players[player2]} at the box address!"
turn2 = get.chom.to_i 




